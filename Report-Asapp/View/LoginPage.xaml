<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ReportAsapp.View.LoginPage"
    BackgroundColor="#ADB3C0"
    Title="Login" xmlns:custom="clr-namespace:ReportAsapp.View.Custom">

    <ContentPage.Content>
        <AbsoluteLayout>
             <Image Source="rassap_bw" Style="{StaticResource backgroundImageStyle}"/>
             <Label Style="{StaticResource backgroundTextStyle}" AbsoluteLayout.LayoutBounds="60,340,300,50"  Opacity="0.1"/>

             <Label Style="{StaticResource labelStyle}" AbsoluteLayout.LayoutBounds="40,120,200,50" Opacity="0.9">Email:</Label>
             <custom:CustomEntry AbsoluteLayout.LayoutBounds="40,148,320,50" Style="{StaticResource insertEntryStyle}"/>  

             <Label Style="{StaticResource labelStyle}" AbsoluteLayout.LayoutBounds="40,250,200,50" Opacity="0.9">Password:</Label>
             <custom:CustomEntry AbsoluteLayout.LayoutBounds="40,278,320,50" Style="{StaticResource insertEntryStyle}" IsPassword="True"/>

            <Button Text="LOGIN" Style="{StaticResource buttonStyle}" AbsoluteLayout.LayoutBounds="130,400,150,50" Command="{Binding LoginCommand}" />

        </AbsoluteLayout>
    </ContentPage.Content>

</ContentPage>

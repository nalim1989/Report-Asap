<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ReportAsapp.View.InventoryPage"
    BackgroundColor="#3A5199"
    NavigationPage.HasNavigationBar="false">

    <ContentPage.Content>
        <StackLayout Margin="10,50,10,0">
         <StackLayout>
             <Button Text="NEW REPORT" HeightRequest="70" Style="{StaticResource mainButtonStyle}"/>
        </StackLayout>

         <StackLayout Margin="0,50,0,0">
            <Button Text="INVENTORY" HeightRequest="70" Style="{StaticResource mainButtonStyle}"/>
         </StackLayout>

         <StackLayout Margin="0,50,0,0">
            <Button Text="IMPORT/EXPORT" HeightRequest="70" Style="{StaticResource mainButtonStyle}"/>
         </StackLayout>

         <StackLayout Margin="0,50,0,0">
            <Button Text="ADVERTISEMENTS" HeightRequest="70" Style="{StaticResource mainButtonStyle}"/>
         </StackLayout>
    </StackLayout>
    </ContentPage.Content>
</ContentPage>
